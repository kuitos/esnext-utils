{
  "compilerOptions": {
	"target": "es5",
	"module": "commonjs",
	"declaration": true,
	"diagnostics": true,
	"noEmitOnError": true,
	"pretty": true,
	"experimentalDecorators": true,
	"noImplicitAny": true,
	"noImplicitReturns": true,
	"rootDir": "src",
	"outDir": "lib",
	"newLine": "LF",
	"emitDecoratorMetadata": true,
	"skipDefaultLibCheck": true,
	"skipLibCheck": true,
	"strictNullChecks": true,
	"lib": ["es2015"],
	"typeRoots": [
	  "node_modules/@types"
	]
  },
  "include": [
	"src/**/*"
  ],
  "exclude": [
	"node_modules",
	"src/**/__tests__/*"
  ]
}
