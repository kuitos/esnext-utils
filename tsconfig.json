{
  "compilerOptions": {
	"target": "es5",
	"module": "commonjs",
	"declaration": true,
	"diagnostics": true,
	"allowSyntheticDefaultImports": true,
	"pretty": true,
	"experimentalDecorators": true,
	"noImplicitAny": true,
	"noImplicitReturns": true,
	"rootDir": "src",
	"outDir": "lib",
	"newLine": "LF",
	"emitDecoratorMetadata": true,
	"skipDefaultLibCheck": true,
	"skipLibCheck": true,
	"strictNullChecks": true,
	"moduleResolution": "node",
	"preserveConstEnums": true,
	"sourceMap": true,
	"lib": [
	  "es6",
	  "dom"
	],
	"typeRoots": [
	  "node_modules/@types"
	]
  },
  "formatCodeOptions": {
	"indentSize": 2,
	"tabSize": 2
  },
  "include": [
	"src/**/*"
  ],
  "exclude": [
	"node_modules",
	"src/**/__tests__/*"
  ]
}
